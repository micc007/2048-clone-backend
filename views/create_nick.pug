doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/style/login_style.css")
        title 2048 Clone | Create nick
    body
        #logout
            a(href="/logout")
                img(src="/img/logout.png", alt="logout icon", class="logout_icon")
        #container
            form(action="/create_nick" method="POST")
                h2 Pick a username
                input(type="text" id="nick_input" name="nick_input")
                button(type="submit") Submit
            p#message #{message}