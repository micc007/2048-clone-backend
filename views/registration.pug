doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/style/login_style.css")
        title 2048 Clone | Registration
    body
        #container
            a(href="/login")
                h1 2048 Clone
            p Register new account, after registration go to your email address and confirm your account
            form(action="/registration" method="POST") 
                label#email_label(for="nick") Email
                input#email(type="email" name="email" required)
                label#password_label(for="password") Password
                input#password(type="password" name="password" required)
                label#password2_label(for="password2") Confirm password
                input#password2(type="password" name="password2" required)
                button#registration_button Create account
                p#message #{message}